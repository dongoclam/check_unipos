<div class="page-header header-filter signup-page" style=" background-image: url('/assets/signup.jpg'); ">
  <div class="container">
    <div class="row">
      <div class="col-md-6 ml-auto mr-auto">
        <div class="search-panel">
          <h2 class="text-center search-form-title">Login</h2>
          <%= devise_error_messages! %>
          <div class="col-md-8 ml-auto mr-auto">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form") do |f| %>
            <div class="form-group">
              <div class="input-group">
                <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: "true" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
              </div>
            </div>
            <div class="form-check">
                <label class="form-check-label remember">
                  <%= f.check_box :remember_me, class: "form-check-input", value: :checked %>
                    <span class="form-check-sign">
                        <span class="check"></span>
                    </span>
                    Remember me
                </label>
            </div>
            <div class="text-center">
              <%= f.submit "Submit", class: "btn btn-primary btn-round" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
