<div class="page-header header-filter signup-page">
  <div class="container">
    <div class="row">
      <div class="col-md-6 ml-auto mr-auto">
        <div class="search-panel">
          <h2 class="text-center search-form-title">Sign Up</h2>
          <%= devise_error_messages! %>
          <div class="col-md-8 ml-auto mr-auto">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form") do |f| %>
            <div class="form-group">
              <div class="input-group">
                <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Cofirmation" %>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit "Get Started", class: "btn btn-primary btn-round" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
